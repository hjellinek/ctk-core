<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd
http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 ">
    <!-- don't set formats here, leave to the maven plugin configuration element -->
    <id>bin</id>
    <!-- unpack directy, no extra root layer -->
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>

    <!-- very brute force for the first pass! -->
    <files>
        <file>
            <source>../testpack/target/ctk-testpack-0.5.1-SNAPSHOT.jar</source>
        </file>
        <file>
            <source>../docs/README-IntroAtCommandLine.txt</source>
        </file>
        <file>
            <source>../testpack/src/main/resources/ctk.sh</source>
        </file>
        <file>
            <source>../cts-java/target/cts-java-0.5.1-SNAPSHOT-tests.jar</source>
            <outputDirectory>lib</outputDirectory>
        </file>
        <file>
            <source>../testpack/target/classes/application.properties</source>
            <outputDirectory>lib</outputDirectory>
        </file>
        <file>
            <source>../testpack/target/classes/log4j2.xml</source>
            <outputDirectory>lib</outputDirectory>
        </file>
    </files>
    <fileSets>
        <!-- somewhat convoluted way to ensure the 'target' dir is there -->
        <fileSet>
            <directory>./</directory>
            <outputDirectory>/target</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>